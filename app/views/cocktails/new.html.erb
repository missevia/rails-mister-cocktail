<div class="new-cocktail-page">

  <div class="create-form">
    <h2 class>Create a new cocktail</h1>
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit, class: "create" %>
    <% end %>
  </div>
</div>
