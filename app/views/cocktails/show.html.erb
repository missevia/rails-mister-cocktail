<div class="show-page">

  <%= cl_image_tag(@cocktail.photo) %>

  <h1><%= @cocktail.name %></h1>

  <p>Doses:</p>

  <ul id = "cocktails">
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %></li>
    <%= link_to "Delete a dose", dose_path(dose), method: :delete, data: { confirm: "Delete this dose?"} %>
    <% end %>
  </ul>

  <ul class = "cocktail-action">

    <li> <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %> </li>

    <li> <%= link_to "Delete a cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Delete this cocktail?"} %> </li>

     <li> <%= link_to "Go back to cocktail list", cocktails_path %> </li>

  </ul>
</div>
